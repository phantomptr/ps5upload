{
  "$schema": "../node_modules/@tauri-apps/cli/schema.json",
  "productName": "PS5Upload",
  "version": "1.2.1",
  "identifier": "com.phantomptr.ps5upload",
  "build": {
    "beforeBuildCommand": "npm run build",
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "frontendDist": "../dist"
  },
  "bundle": {
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "category": "public.app-category.utilities",
    "macOS": {
      "minimumSystemVersion": "10.13",
      "exceptionDomain": "",
      "signingIdentity": null,
      "entitlements": null
    },
    "linux": {
      "appimage": {
        "bundleMediaFramework": false
      },
      "deb": {
        "depends": [
          "libwebkit2gtk-4.1-0",
          "libsoup-3.0-0",
          "libgtk-3-0",
          "libayatana-appindicator3-1"
        ]
      }
    }
  },
  "app": {
    "windows": [
      {
        "title": "PS5Upload",
        "width": 1440,
        "height": 960,
        "minWidth": 1200,
        "minHeight": 840,
        "decorations": false,
        "shadow": true,
        "transparent": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "plugins": {
    "dialog": null
  }
}
